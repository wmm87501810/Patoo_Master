<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
        >
    <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/master_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >
        <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="132px"
                android:layout_marginLeft="26px"
                android:layout_marginRight="16px"
                >
            <ImageView
                    android:id="@+id/iv_content_logo"
                    android:layout_width="74px"
                    android:layout_height="74px"
                    android:layout_centerVertical="true"/>
            <TextView
                    android:text="叮铃铃铃"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_content_logo"
                    android:layout_marginLeft="38px"
                    android:layout_centerVertical="true"
                    android:textSize="36px"
                    android:id="@+id/tv_content_nikname" />
            <TextView
                    android:id="@+id/tv_content_type_name"
                    android:textSize="26px"
                    android:text="手工艺术"
                    android:paddingLeft="18px"
                    android:paddingRight="18px"
                    android:paddingTop="10px"
                    android:paddingBottom="10px"
                    android:textColor="@color/gray_cc"
                    android:background="@drawable/shape_master_comment_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>
        </com.zhy.autolayout.AutoRelativeLayout>
        <ImageView
                android:layout_height="416px"
                android:layout_marginLeft="26px"
                android:layout_marginRight="26px"
                android:id="@+id/iv_content_img"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:background="@color/master_attention" />
        <TextView
                android:layout_marginLeft="26px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="34px"
                android:textColor="@color/black"
                android:text="四步就能轻松解锁"
                android:id="@+id/tv_content_title" />
        <TextView
                android:layout_marginLeft="26px"
                android:layout_marginRight="16px"
                android:layout_marginTop="42px"
                android:textColor="@color/gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="26px"
                android:maxLines="3"
                android:text="打开手机，叮铃铃铃铃铃铃铃铃铃铃铃铃铃铃铃铃铃铃铃铃铃铃铃铃铃铃铃铃铃铃铃铃铃铃铃铃铃铃铃铃铃铃铃铃铃铃铃铃....."
                android:id="@+id/tv_content_info" />
        <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="16px"
                android:layout_marginRight="36px"
                android:layout_height="80px">
            <TextView
                    android:text="0"
                    android:textSize="34px"
                    android:textColor="@color/gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_content_liulanshu"
                    android:layout_alignParentRight="true"/>
            <ImageView
                    android:id="@+id/iv_content_liulan"
                    android:src="@mipmap/tanjing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/tv_content_liulanshu"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20px"/>
        </com.zhy.autolayout.AutoRelativeLayout>
        <View
                android:background="@color/whitesmoke"
                android:layout_width="match_parent"
                android:layout_height="2px"/>
    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/bigman_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >

        <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/user_logo"
                    android:layout_width="74px"
                    android:layout_height="74px"
                    android:layout_marginLeft="26px"
                    android:layout_marginTop="30px"
                    android:src="@mipmap/app_icon" />
            <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="42px"
                    android:layout_marginLeft="120px"
                    android:text="哑巴"
                    android:textColor="#1e1c1c"
                    android:textSize="30px" />
            <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/user_logo"
                    android:layout_marginLeft="26px"
                    android:layout_marginRight="62px"
                    android:orientation="vertical"
                    android:paddingBottom="30px">
                <TextView
                        android:id="@+id/zombia_status"
                        android:layout_width="1px"
                        android:layout_height="1px" />

                <TextView
                        android:id="@+id/user_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="36px"
                        android:layout_marginRight="46px"
                        android:text="下雨天来画画，大家约起来！"
                        android:textColor="#424242"
                        android:textSize="34px" />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoRelativeLayout>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/user_imglist"
                android:layout_width="508px"
                android:layout_height="155px"
                android:layout_marginBottom="34px"
                android:layout_marginLeft="26px"
                android:layout_marginRight="62px"
                android:scrollbars="horizontal"
                android:visibility="visible">

        </android.support.v7.widget.RecyclerView>

        <ImageView
                android:id="@+id/url_img_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <ImageView
                android:id="@+id/user_img_width_share"
                android:layout_width="456px"
                android:layout_height="264px"
                android:layout_marginBottom="34px"
                android:layout_marginLeft="26px"
                android:layout_marginTop="34px"
                android:scaleType="fitXY"
                android:visibility="visible" />

        <ImageView
                android:id="@+id/user_img_height_share"
                android:layout_width="344px"
                android:layout_height="392px"
                android:layout_marginBottom="34px"
                android:layout_marginLeft="26px"
                android:layout_marginTop="34px"
                android:scaleType="fitXY"
                android:visibility="visible" />

        <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:layout_marginLeft="104px"
                android:orientation="horizontal">

            <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18px"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/gap_36px"
                    >

                <ImageView
                        android:layout_width="36px"
                        android:layout_height="42px"
                        android:src="@mipmap/weizhi"

                        />

                <TextView
                        android:id="@+id/user_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18px"
                        android:layout_marginTop="8px"
                        android:text="广州 天恒广场"
                        android:textSize="26px" />
            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
