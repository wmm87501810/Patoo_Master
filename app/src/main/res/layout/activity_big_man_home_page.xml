<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <com.zhy.autolayout.AutoFrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        <com.shishiTec.HiMaster.UI.Views.MyScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

            <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                <com.zhy.autolayout.AutoRelativeLayout
                        android:id="@+id/title_top_all"
                        android:layout_width="match_parent"
                        android:layout_height="390px"
                        >

                    <ImageView
                            android:id="@+id/img_title_cover"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@mipmap/homepage_title"
                            />

                    <com.zhy.autolayout.AutoRelativeLayout
                            android:id="@+id/test"
                            android:layout_width="match_parent"
                            android:layout_height="88px"
                            android:layout_alignParentTop="true"
                            android:background="@color/transparent"
                            android:orientation="horizontal"
                            >

                        <ImageView
                                android:id="@+id/left_back"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="16px"
                                android:src="@mipmap/jiantou_white"
                                />

                        <ImageView
                                android:id="@+id/gift"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:layout_marginRight="42px"
                                android:src="@mipmap/shangchuan"
                                />

                    </com.zhy.autolayout.AutoRelativeLayout>

                    <ImageView
                            android:id="@+id/title_cover"
                            android:layout_width="138px"
                            android:layout_height="138px"
                            android:layout_below="@id/test"
                            android:layout_centerHorizontal="true"
                            android:src="@mipmap/jiazanshibaitu"
                            />

                    <TextView
                            android:id="@+id/title_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/title_cover"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/gap_20px"
                            android:text="浮生若梦"
                            android:textColor="@color/white"
                            android:textSize="@dimen/gap_34px"
                            />

                    <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/title_name"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/gap_20px"
                            >

                        <TextView
                                android:id="@+id/Zambia_home_page"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="赞"
                                android:textColor="@color/white"
                                android:textSize="@dimen/gap_30px"
                                />

                        <TextView
                                android:id="@+id/Zambia_home_page_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/gap_26px"
                                android:layout_toRightOf="@id/Zambia_home_page"
                                android:text="49"
                                android:textColor="@color/white"
                                android:textSize="@dimen/gap_30px"
                                />

                        <View
                                android:id="@+id/xian"
                                android:layout_width="@dimen/gap_1px"
                                android:layout_height="@dimen/gap_30px"
                                android:layout_marginLeft="@dimen/gap_30px"
                                android:layout_toRightOf="@id/Zambia_home_page_num"
                                android:background="@color/white"
                                />

                        <TextView
                                android:id="@+id/browse"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/gap_30px"
                                android:layout_toRightOf="@id/xian"
                                android:text="浏览"
                                android:textColor="@color/white"
                                />

                        <TextView
                                android:id="@+id/browse_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/gap_26px"
                                android:layout_toRightOf="@id/browse"
                                android:text="4399"
                                android:textColor="@color/white"
                                />
                    </RelativeLayout>
                </com.zhy.autolayout.AutoRelativeLayout>

                <include
                    layout="@layout/include_home_page_big_man"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/gap_80px"/>
                <include
                    layout="@layout/include_home_page_master"/>
                <include
                    layout="@layout/include_home_page_maste"/>
            </com.zhy.autolayout.AutoLinearLayout>
        </com.shishiTec.HiMaster.UI.Views.MyScrollView>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/gap_80px"
                android:layout_gravity="bottom"
                android:background="@color/homePageBottom"
                >

            <RelativeLayout
                    android:id="@+id/rl_sixin"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >

                <TextView
                        android:id="@+id/sixin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="私信"
                        android:textColor="@color/black"
                        />

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/gap_26px"
                        android:layout_toLeftOf="@id/sixin"
                        android:src="@mipmap/sixin"
                        />
            </RelativeLayout>

            <View
                    android:layout_width="@dimen/gap_1px"
                    android:layout_height="@dimen/gap_38px"
                    android:layout_gravity="center_vertical"
                    android:background="@color/windowBackground"
                    />

            <RelativeLayout
                    android:id="@+id/rl_guanzhu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >

                <TextView
                        android:id="@+id/guanzhu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="关注"
                        android:textColor="@color/black"
                        />

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/gap_26px"
                        android:layout_toLeftOf="@id/guanzhu"
                        android:src="@mipmap/guanzhu_homepage"
                        />
            </RelativeLayout>


            <View
                    android:layout_width="@dimen/gap_1px"
                    android:layout_height="@dimen/gap_38px"
                    android:layout_gravity="center_vertical"
                    android:background="@color/windowBackground"
                    />

            <RelativeLayout
                    android:id="@+id/rl_dianzan"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >

                <TextView
                        android:id="@+id/dianzan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="点赞"
                        android:textColor="@color/black"
                        />

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/gap_26px"
                        android:layout_toLeftOf="@id/dianzan"
                        android:src="@mipmap/dianzan_homepage"
                        />
            </RelativeLayout>
        </LinearLayout>
    </com.zhy.autolayout.AutoFrameLayout>
</com.zhy.autolayout.AutoLinearLayout>
