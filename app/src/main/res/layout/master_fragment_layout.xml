<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                     xmlns:app="http://schemas.android.com/apk/res-auto"
                                     android:id="@+id/main_content"
                                     android:layout_width="match_parent"
                                     android:layout_height="match_parent"
                                     android:orientation="vertical"
        >

    <com.flyco.tablayout.SlidingTabLayout
            android:id="@+id/tl_master"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:background="@color/white"
            app:tl_divider_width="1dp"
            app:tl_indicator_anim_enable="true"
            app:tl_indicator_color="@color/rosybrown"
            app:tl_indicator_height="10px"
            app:tl_indicator_width_equal_title="true"
            app:tl_tab_padding="36px"
            app:tl_tab_space_equal="true"
            app:tl_textSelectColor="#737373"
            app:tl_textUnselectColor="#808080"
            app:tl_underline_color="#1A000000"
            app:tl_underline_height="1dp"
            />


    <android.support.v4.view.ViewPager
            android:id="@+id/vp_master"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
    </android.support.v4.view.ViewPager>
</com.zhy.autolayout.AutoLinearLayout>

