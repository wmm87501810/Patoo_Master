<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        >

    <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="140px"
            android:orientation="vertical"
            >

        <TextView
                android:id="@+id/tv_store_name"
                android:layout_width="wrap_content"
                android:layout_height="70px"
                android:layout_marginLeft="@dimen/gap_26px"
                android:paddingTop="28px"
                android:text="地址"
                android:textColor="@color/black"
                android:textSize="@dimen/gap_30px"
                />

        <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70px"
                >

            <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/gap_26px"
                    android:gravity="center_vertical"
                    android:text="地址"
                    android:textColor="@color/color_80"
                    android:textSize="28px"
                    />
            <TextView
                    android:id="@+id/tv_address1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="52px"
                    android:gravity="center_vertical"
                    android:text="地址"
                    android:textColor="@color/color_80"
                    android:textSize="28px"
                    android:layout_toRightOf="@id/tv_address"
                    android:visibility="gone"
                    />
            <TextView
                    android:id="@+id/tv_address2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="52px"
                    android:gravity="center_vertical"
                    android:text="地址"
                    android:textColor="@color/color_80"
                    android:textSize="28px"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="34px"
                    android:visibility="gone"
                    />
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/gap_1px"
            android:background="@color/windowBackground"
            />
</com.zhy.autolayout.AutoLinearLayout>
