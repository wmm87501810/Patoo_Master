<?xml version="1.0" encoding="utf-8"?>
<com.shishiTec.HiMaster.UI.Views.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_height"
        android:gravity="center"
        android:text="设置隐私密码"
        android:textColor="@color/userNameColor"
        android:textSize="40px"
        android:layout_weight="0.16" />

    <com.shishiTec.HiMaster.UI.Views.PercentLinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:weightSum="1">
        <EditText
            android:id="@+id/mobile1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/tab_height"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="36px"
            android:maxLength = "1"
            android:digits="123456789"
            app:layout_widthPercent="25%"/>
        <EditText
            android:id="@+id/mobile2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/tab_height"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="36px"
            android:maxLength = "1"
            android:digits="123456789"
            app:layout_widthPercent="25%"/>
        <EditText
            android:id="@+id/mobile3"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/tab_height"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="36px"
            android:maxLength = "1"
            android:digits="123456789"
            app:layout_widthPercent="25%"/>
        <EditText
            android:id="@+id/mobile4"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/tab_height"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="36px"
            android:maxLength = "1"
            android:digits="123456789"
            app:layout_widthPercent="25%"/>
    </com.shishiTec.HiMaster.UI.Views.PercentLinearLayout>

    <Button
        android:id="@+id/next"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="getSecurityCode"
        android:layout_gravity="center_horizontal"
        android:textSize="36px"
        android:text="下一步"/>-->

</com.shishiTec.HiMaster.UI.Views.PercentLinearLayout>
