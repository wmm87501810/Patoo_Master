<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:layout_marginBottom="10px"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/accept_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:clickable="false">

        <com.shishiTec.HiMaster.UI.Views.CircleImageView
            android:id="@+id/accept_head"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            app:border_width="0dp"
            app:border_color="#ffffff"
            android:scaleType="centerCrop"
            android:src="@drawable/xiaotouxiang" />

        <TextView
            android:id="@+id/accept_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/accept_head"
            android:autoLink="web"
            android:background="@drawable/bj_sx_05"
            android:gravity="center_vertical"
            android:lineSpacingExtra="2dp"
            android:maxWidth="225.0dip"
            android:paddingRight="8dip"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/accept_img"
            android:layout_width="81dp"
            android:layout_height="105dp"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/accept_head"
            android:scaleType="centerCrop"
            android:visibility="gone" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/send_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:clickable="false">

        <com.shishiTec.HiMaster.UI.Views.CircleImageView
            android:id="@+id/send_head"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:border_width="0dp"
            app:border_color="#ffffff"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/datouxiang" />

        <TextView
            android:id="@+id/send_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/send_head"
            android:background="@drawable/bj_sx_03"
            android:gravity="center_vertical"
            android:lineSpacingExtra="2dp"
            android:maxWidth="225.0dip"
            android:paddingLeft="14dp"
            android:textColor="#000"
            android:textSize="15sp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/send_img"
            android:layout_width="81dp"
            android:layout_height="105dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/send_head"
            android:scaleType="centerCrop"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>