<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.shishiTec.HiMaster.UI.Activity.mall.MallOtherStudyActivity"
        >

    <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/test"
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:layout_alignParentTop="true"
            android:background="@color/white"
            android:orientation="horizontal"
            >

        <ImageView
                android:id="@+id/left_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16px"
                android:src="@mipmap/arrow_black"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="他们也在学"
                android:textColor="@color/black"
                />
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/gap_20px"
            android:background="@color/windowBackground"
            />

    <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipeLayout_other_study"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_other_study"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                >

        </android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
