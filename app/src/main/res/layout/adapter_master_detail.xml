<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#9d9d9d"/>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32px"
        >
        <ImageView
            android:id="@+id/iv_master_detail_user_logo"
            android:layout_width="73px"
            android:layout_height="73px"
            android:src="@mipmap/app_icon"
            android:layout_marginLeft="30px"
            android:layout_marginTop="30px"
            />
            <TextView
                android:layout_toRightOf="@id/iv_master_detail_user_logo"
                android:layout_marginLeft="32px"
                android:id="@+id/tv_master_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="胖虎"
                android:textColor="@color/black"
                android:textSize="28px"
                android:layout_marginTop="30px"
                />
            <TextView
                android:layout_below="@id/tv_master_user_name"
                android:layout_toRightOf="@id/iv_master_detail_user_logo"
                android:layout_marginTop="20px"
                android:id="@+id/tv_master_user_content"
                android:layout_marginLeft="32px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下雨天来画画，大家约起来！"
                android:layout_marginRight="30px"
                android:textColor="#424242"
                android:textSize="26px" />
        <TextView
            android:text="40分钟前"
            android:textSize="26px"
            android:layout_marginTop="32px"
            android:layout_marginRight="30px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/detail_time" />
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>