<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context="com.shishiTec.HiMaster.UI.Activity.mall.MallCardDetailActtivity"
        >

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

            <RelativeLayout
                    android:id="@+id/show_negative"
                    android:layout_width="match_parent"
                    android:layout_height="328px"
                    android:layout_marginLeft="@dimen/gap_20px"
                    android:layout_marginRight="@dimen/gap_20px"
                    android:layout_marginTop="@dimen/gap_20px"
                    android:background="@drawable/card_bg_frame"
                    android:visibility="gone"
                    >

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/gap_28px"
                        android:text="@string/how_use"
                        android:textSize="@dimen/gap_28px"
                        />

                <ImageButton
                        android:id="@+id/flip_intro"
                        android:layout_width="80px"
                        android:layout_height="80px"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:src="@mipmap/jiangyouka_chahao"
                        />

                <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/flip_intro"
                        android:paddingBottom="@dimen/gap_40px"
                        android:paddingLeft="@dimen/gap_40px"
                        android:paddingRight="@dimen/gap_40px"
                        >

                    <TextView
                            android:id="@+id/use_intro"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/gap_28px"
                            android:lineSpacingExtra="@dimen/gap_8px"
                            android:paddingBottom="@dimen/gap_40px"
                            android:paddingLeft="@dimen/gap_40px"
                            android:paddingRight="@dimen/gap_40px"
                            android:textColor="@color/color_66"
                            android:textSize="@dimen/gap_30px"
                            tools:text="酱油卡使用规则"
                            />

                </ScrollView>

            </RelativeLayout>


            <RelativeLayout
                    android:id="@+id/show_front"
                    android:layout_width="match_parent"
                    android:layout_height="328px"
                    android:layout_marginLeft="@dimen/gap_20px"
                    android:layout_marginRight="@dimen/gap_20px"
                    android:layout_marginTop="@dimen/gap_20px"
                    >

                <ImageView
                        android:id="@+id/card_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        />

                <TextView
                        android:id="@+id/flip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/gap_20px"
                        android:layout_marginTop="@dimen/gap_20px"
                        android:drawablePadding="@dimen/gap_36px"
                        android:drawableRight="@mipmap/jiangyouka_jiantu"
                        android:gravity="center"
                        android:text="@string/how_use"
                        android:textColor="@color/color_1a"
                        android:textSize="@dimen/gap_24px"
                        android:visibility="gone"
                        />

                <TextView
                        android:id="@+id/date_limit"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/gap_42px"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:background="@mipmap/jiangyouka_yyuanjiaojuxing"
                        android:gravity="center_vertical|right"
                        android:paddingRight="@dimen/gap_20px"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/gap_20px"
                        tools:text="使用期限:"
                        />
            </RelativeLayout>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/gap_60px"
                    android:layout_marginLeft="@dimen/gap_26px"
                    android:layout_marginTop="@dimen/gap_26px"
                    android:text="使用说明"
                    android:textColor="@color/black"
                    />

            <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/gap_88px"
                    >

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >

                    <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginLeft="26px"
                            android:background="@color/app_line_color"
                            />

                    <TextView
                            android:id="@+id/tv_intro"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/gap_26px"
                            android:text=""
                            android:textColor="@color/black"
                            />

                    <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginLeft="26px"
                            android:background="@color/app_line_color"
                            />

                    <RelativeLayout
                            android:id="@+id/coupon_rl"
                            android:layout_width="match_parent"
                            android:layout_height="100px"
                            android:background="@color/white"
                            >

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="26px"
                                android:text="使用优惠券"
                                android:textColor="@color/black"
                                android:textSize="28px"
                                />

                        <TextView
                                android:id="@+id/coupon_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="26px"
                                android:drawableRight="@mipmap/arrow_right"
                                android:text=""
                                android:textSize="28px"
                                />
                    </RelativeLayout>

                    <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginLeft="26px"
                            android:background="@color/app_line_color"
                            />

                    <RelativeLayout
                            android:id="@+id/AliPay"
                            android:layout_width="match_parent"
                            android:layout_height="100px"
                            android:background="@color/white"
                            >

                        <ImageView
                                android:id="@+id/zhifubao_cir_img"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="26px"
                                android:src="@mipmap/circular"
                                />

                        <ImageView
                                android:id="@+id/zhifubao"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="26px"
                                android:layout_toRightOf="@id/zhifubao_cir_img"
                                android:src="@mipmap/zhifubao"
                                />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="36px"
                                android:layout_toRightOf="@id/zhifubao"
                                android:text="支付宝"
                                android:textColor="@color/black"
                                android:textSize="30px"
                                />
                    </RelativeLayout>

                    <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginLeft="26px"
                            android:background="@color/app_line_color"
                            />

                    <RelativeLayout
                            android:id="@+id/WeChat"
                            android:layout_width="match_parent"
                            android:layout_height="100px"
                            android:background="@color/white"
                            >

                        <ImageView
                                android:id="@+id/weixin_cir_img"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="26px"
                                android:src="@mipmap/circular_black"
                                />

                        <ImageView
                                android:id="@+id/weixin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="26px"
                                android:layout_toRightOf="@id/weixin_cir_img"
                                android:src="@mipmap/weixn"
                                />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="36px"
                                android:layout_toRightOf="@id/weixin"
                                android:text="微信"
                                android:textColor="@color/black"
                                android:textSize="30px"
                                />
                    </RelativeLayout>

                    <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginLeft="26px"
                            android:background="@color/app_line_color"
                            />

                    <RelativeLayout
                            android:id="@+id/UnionPay"
                            android:layout_width="match_parent"
                            android:layout_height="100px"
                            android:background="@color/white"
                            >

                        <ImageView
                                android:id="@+id/yinlian_cir_img"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="26px"
                                android:src="@mipmap/circular_black"
                                />

                        <ImageView
                                android:id="@+id/yinhangka"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="26px"
                                android:layout_toRightOf="@id/yinlian_cir_img"
                                android:src="@mipmap/yinhang"
                                />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="36px"
                                android:layout_toRightOf="@id/yinhangka"
                                android:text="银联"
                                android:textColor="@color/black"
                                android:textSize="30px"
                                />
                    </RelativeLayout>

                    <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginLeft="26px"
                            android:background="@color/app_line_color"
                            />

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_gravity="bottom"
                android:background="@color/white"
                >

            <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="26px"
                    android:text="200"
                    android:textColor="@color/red"
                    />
            <Button
                    android:id="@+id/buy_card"
                    android:layout_width="360px"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:background="@color/default_yellow"
                    android:layout_alignParentRight="true"
                    android:text="购买"
                    android:textColor="@color/black"
                    android:textSize="@dimen/gap_36px"
                    />
        </RelativeLayout>

    </FrameLayout>
</LinearLayout>
