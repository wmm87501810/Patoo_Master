<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        >

    <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/al_ka"
            android:layout_width="match_parent"
            android:layout_height="@dimen/gap_148px"
            android:orientation="vertical"
            >

        <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/gap_20px"
                android:background="@color/windowBackground"
                />

        <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/gap_26px"
                android:layout_marginTop="38px"
                >

            <ImageView
                    android:id="@+id/img_ka"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ka"
                    />

            <TextView
                    android:id="@+id/tv_ka"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/gap_28px"
                    android:layout_toRightOf="@id/img_ka"
                    android:gravity="center_vertical"
                    android:text="指定卡"
                    android:textColor="@color/black"
                    android:textSize="@dimen/gap_30px"
                    />

            <ImageView
                    android:id="@+id/img_ka_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="26px"
                    android:src="@mipmap/shangpingjikantou"
                    />

            <TextView
                    android:id="@+id/tv_see_ka"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/gap_36px"
                    android:layout_toLeftOf="@id/img_ka_right"
                    android:gravity="center_vertical"
                    android:text="查看"
                    android:textColor="@color/color_b1"
                    android:textSize="@dimen/gap_24px"
                    />
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/gap_26px"

                android:layout_marginTop="@dimen/gap_22px"
                >

            <ImageView
                    android:id="@+id/img_changwan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ka"
                    android:visibility="invisible"
                    />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/gap_28px"
                    android:layout_toRightOf="@id/img_changwan"
                    android:text="购买畅玩卡玩更多课程，更优惠"
                    android:textColor="@color/color_b1"
                    android:textSize="@dimen/gap_24px"
                android:id="@+id/tv_card_brief" />
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>
