<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100px"
    android:layout_alignParentTop="true"
    android:background="@color/default_yellow">

    <ImageButton
        android:background="@null"
        android:id="@+id/user_icon"
        android:layout_width="@dimen/gap_88px"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:src="@mipmap/master_personal_center"
        android:layout_marginRight="12px"/>

    <ImageButton
        android:background="@null"
        android:id="@+id/shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/shop"
        android:layout_marginRight="32px" />
    <ImageButton
        android:background="@null"
        android:layout_toLeftOf="@id/shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@mipmap/upload"
        android:layout_marginRight="32px"
        android:id="@+id/iv_master_main_top" />
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_toRightOf="@id/user_icon"
        android:background="@drawable/shape_master_search"
        android:layout_width="492px"
        android:layout_height="50px"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:id="@+id/al_master_search">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="26px"
            android:layout_marginLeft="60px"
            android:text="搜索"/>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>
