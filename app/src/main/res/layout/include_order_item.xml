<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/jump_user"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:paddingLeft="@dimen/gap_24px"
        android:paddingRight="@dimen/gap_24px">
        <LinearLayout
            android:id="@+id/click_user"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/order_user_logo"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/daren_logo"/>
            <TextView
                android:id="@+id/order_user_nikeName"
                android:layout_marginLeft="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/order_user_logo"
                android:textColor="@color/black_ligh"
                android:textSize="12sp"
                tools:text="呵呵"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:layout_toRightOf="@id/order_user_nikeName"
                android:background="@mipmap/next"/>
        </LinearLayout>

        <TextView
            android:id="@+id/t_order_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_66"
            android:text="订单状态"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/devide_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_bg"
        android:layout_marginLeft="@dimen/gap_24px"
        android:layout_marginRight="@dimen/gap_24px">
    </ImageView>
    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="168px"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/gap_24px"
        android:paddingRight="@dimen/gap_24px">
        <ImageView
            android:id="@+id/order_image"
            android:layout_width="126px"
            android:layout_height="120px"
            android:layout_gravity="center_vertical"
            tools:src ="@mipmap/icon_default"
            android:scaleType="fitXY"/>
        <RelativeLayout
            android:layout_marginLeft="14dp"
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_height="52dp">
            <TextView
                android:id="@+id/order_course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/black_ligh"
                tools:text="带你装逼带你飞"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:id="@+id/order_count_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:singleLine="true"
                android:textSize="12sp"
                android:textColor="@color/color_66"
                tools:text="兴趣酱油3次卡抵扣"/>
            <LinearLayout
                android:id="@+id/normal_symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/gap_24px"
                    android:src="@mipmap/erweima"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/next"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_bg"
        android:layout_marginLeft="@dimen/gap_24px"
        android:layout_marginRight="@dimen/gap_24px"/>
    <LinearLayout
        android:id="@+id/normal_user_item"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="#fff"
        android:layout_marginLeft="@dimen/gap_24px"
        android:layout_marginRight="@dimen/gap_24px">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="订单号:"
                android:textColor="@color/color_66"
                android:textSize="12sp"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/order_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_66"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                tools:text="x12345678"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="购买时间:"
                android:textColor="@color/color_66"
                android:textSize="12sp"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/buy_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_66"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                tools:text="2015/10/14 16:27"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="上课时间:"
                android:textColor="@color/color_66"
                android:textSize="12sp"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/learn_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_66"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                tools:text="2016/1/1 14:20"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="套餐:"
                android:textColor="@color/color_66"
                android:textSize="12sp"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/package_n"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_66"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                tools:text="初级,装逼"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_bg"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

    </LinearLayout>
</com.zhy.autolayout.AutoLinearLayout>