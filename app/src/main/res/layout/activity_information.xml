<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_bg"
    tools:context="com.shishiTec.HiMaster.UI.Activity.Accouont.InformationActivity">
    <RelativeLayout
        android:layout_height="110px"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/white">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/gerenziliao_jiaotou"
            android:layout_marginLeft="24px"
            android:id="@+id/iv_cancel" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:textSize="36px"
            android:text="消息"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="20px"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="112px"
        android:background="@color/white"
        android:paddingLeft="24px"
        android:paddingRight="20px"
        android:id="@+id/rl_notification">
        <ImageView
            android:id="@+id/tongzhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/xiaoxi_tongzhi"
            android:layout_centerVertical="true"
            android:padding="15px"
            android:background="@drawable/shape_roundness"/>
        <TextView
            android:layout_toRightOf="@id/tongzhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24px"
            android:textColor="@color/color_66"
            android:layout_centerVertical="true"
            android:textSize="34px"
            android:text="系统通知"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="32px"
            android:src="@mipmap/xiaoxi_jiantou"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="24px"
        android:layout_marginRight="20px"
        android:background="@color/app_line_color"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="112px"
        android:background="@color/white"
        android:paddingLeft="24px"
        android:gravity="center_vertical"
        android:paddingRight="20px"
        android:id="@+id/rl_comment_reply">
        <ImageView
            android:id="@+id/pinglun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/xiaoxi"
            android:padding="15px"
            android:background="@drawable/shape_roundness"/>
        <TextView
            android:layout_toRightOf="@id/pinglun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24px"
            android:textColor="@color/color_66"
            android:layout_centerVertical="true"
            android:textSize="34px"
            android:text="评论、回复"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="32px"
            android:src="@mipmap/xiaoxi_jiantou"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="24px"
        android:layout_marginRight="20px"
        android:background="@color/app_line_color"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="112px"
        android:background="@color/white"
        android:paddingLeft="24px"
        android:paddingRight="20px"
        android:id="@+id/rl_private_leeter">
        <ImageView
            android:id="@+id/sixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/xiaoxi_sixin"
            android:padding="15px"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_roundness"/>
        <TextView
            android:layout_toRightOf="@id/sixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24px"
            android:textColor="@color/color_66"
            android:layout_centerVertical="true"
            android:textSize="34px"
            android:text="私信"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="32px"
            android:src="@mipmap/xiaoxi_jiantou"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
</LinearLayout>
