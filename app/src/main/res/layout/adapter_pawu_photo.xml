<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/gap_10px"
    android:layout_marginRight="@dimen/gap_10px"
    android:background="@color/white">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:id="@+id/iv_photo_logo"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_gravity="center"
            android:layout_marginTop="20px"
            android:scaleType="fitXY" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/gap_20dp"
            android:background="@color/color_1a" />

        <TextView
            android:id="@+id/pawu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gap_20dp" />


    </com.zhy.autolayout.AutoLinearLayout>
</android.support.v7.widget.CardView>