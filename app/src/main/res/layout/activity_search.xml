<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_height="100px"
        android:layout_width="match_parent"
        android:background="@color/default_yellow">
        <TextView
            android:text="取消"
            android:textSize="30px"
            android:id="@+id/tv_cancel"
            android:textColor="@color/black"
            android:layout_marginRight="42px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
        <EditText
            android:id="@+id/et_add_tag"
            android:background="@drawable/shape_master_upload_add_tag"
            android:textSize="30px"
            android:paddingLeft="92px"
            android:layout_height="50px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="20px"
            android:layout_marginBottom="10px"
            android:layout_marginTop="10px"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tv_cancel"
            android:textColorHint="@color/white"
            android:singleLine="true"
            android:maxLines="1"
            android:hint="请输入关键字"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="62px"
            android:src="@mipmap/sousuo"/>
    </com.zhy.autolayout.AutoRelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_search_kecheng"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:gravity="center"
            android:text="课程"
            android:textColor="@color/default_font_color"
            android:textSize="32px" />
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/default_line_color"
            android:layout_marginTop="20px"
            android:layout_marginBottom="20px"/>

        <TextView
            android:id="@+id/tv_search_person"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:gravity="center"
            android:text="人"
            android:textColor="@color/default_font_gray"
            android:textSize="32px" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/default_line_color"
            android:layout_marginTop="20px"
            android:layout_marginBottom="20px"/>

        <TextView
            android:id="@+id/tv_search_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:gravity="center"
            android:text="分享"
            android:textColor="@color/default_font_gray"
            android:textSize="32px" />
    </LinearLayout>
    <View
        android:layout_width="350px"
        android:layout_height="5px"
        android:layout_marginLeft="10px"
        android:id="@+id/navigationLine"
        android:layout_alignParentBottom="true"
        android:background="@color/default_yellow" />
    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="@color/bg_gray"/>
    <FrameLayout
        android:id="@+id/my_message_framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
