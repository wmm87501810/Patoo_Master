<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_bg"
    tools:context="com.shishiTec.HiMaster.UI.Activity.UserCenter.ModifyPasswordActivity">
    <include layout="@layout/include_toolbar"/>
    <EditText
        android:id="@+id/pwd_et"
        android:layout_marginTop="20px"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@null"
        android:layout_marginLeft="20px"
        android:inputType="textPassword"
        android:singleLine="true"
        android:hint="请输入原始密码"/>
    <EditText
        android:id="@+id/new_pwd_et"
        android:layout_width="match_parent"
        android:layout_marginLeft="20px"
        android:layout_height="100px"
        android:singleLine="true"
        android:inputType="textPassword"
        android:background="@null"
        android:hint="输入新密码"/>
    <EditText
        android:id="@+id/again_new_pwd_et"
        android:layout_width="match_parent"
        android:singleLine="true"
        android:layout_marginLeft="20px"
        android:inputType="textPassword"
        android:layout_height="100px"
        android:background="@null"
        android:hint="再次确认新密码"/>
    <Button
        android:text="确认"
        android:textSize="30px"
        android:id="@+id/btn_submit"
        android:layout_height="80px"
        android:layout_marginTop="120px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_width="match_parent"
        android:background="@color/default_yellow"/>
</LinearLayout>
